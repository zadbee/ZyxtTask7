<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>MVC Carnegie Financial Services</display-name>
  <description>MVC Carnegie Financial Services</description>
  <servlet>
    <servlet-name>controller-servlet</servlet-name>
    <servlet-class>controller.Controller</servlet-class>
    <init-param>
      <param-name>jdbcDriverName</param-name>
      <param-value>com.mysql.jdbc.Driver</param-value>
    </init-param>
    <init-param>
      <param-name>jdbcURL</param-name>
      <param-value>jdbc:mysql:///CFS</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller-servlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>homepage.do</welcome-file>
  </welcome-file-list>
</web-app>